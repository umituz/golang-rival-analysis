# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENABLE_CORS=true
ENABLE_TLS=false

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rival_analysis
DB_USER=postgres
DB_PASSWORD=
DB_SSL_MODE=disable

# External API Keys
SIMILARWEB_API_KEY=
LINKEDIN_API_KEY=
CRUNCHBASE_API_KEY=
TWITTER_API_KEY=
TWITTER_API_SECRET=
INSTAGRAM_API_KEY=

# Cache Configuration
CACHE_TYPE=memory
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_TTL=1h

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Security Configuration
ENABLE_RATE_LIMIT=true
RATE_LIMIT=100
RATE_LIMIT_WINDOW=1m
